{
	"$schema": "https://railway.app/railway.schema.json",
	"build": {
		"builder": "NIXPACKS",
		"nixpacksPlan": {
			"providers": ["python"],
			"phases": {
				"setup": {
					"nixPkgs": ["...", "nodejs"]
				}
			}
		},
		"buildCommand": "npm ci"
	},
	"deploy": {
		"runtime": "V2",
		"numReplicas": 1,
		"startCommand": "python manage.py migrate && gunicorn mystore.wsgi",
		"sleepApplication": false,
		"restartPolicyType": "ON_FAILURE",
		"restartPolicyMaxRetries": 10
	}
}
